<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">Simple Airbnb</a>
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
      <%= link_to 'Add', new_flat_path, class: "btn btn-outline-primary ms-2 d-block" %>
    </form>
  </div>
</nav>

<div class="container w-90">
  <h1 class="mt-3 ms-5">Flats</h1>
  <div class="d-flex flex-wrap justify-content-center gap-3">
      <% @flats.each do |flat| %>
        <div class="card" style="width: 18rem;">
          <!--<img src="https://source.unsplash.com/random?sig=<%= flat.id %>&appartment" class="card-img-top h-50" alt=<%= flat.name %>>-->
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p class="card-text"><%= flat.number_of_guests %>x<i class="fa-solid fa-person"></i> <%= flat.price_per_night %>â‚¬ </p>
            <%= link_to 'More info', flat_path(flat), class: "btn btn-primary" %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-warning" %>
            <%= link_to 'Delete', flat_path(flat), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      <% end %>
  </div>
</div>
